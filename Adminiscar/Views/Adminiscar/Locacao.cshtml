@{

    Layout = "~/Views/Shared/_HeaderAndFooter.cshtml";

}

@{
    ViewBag.Title = "Adminiscar";
}

<!--header-->
<header class="navInfo mb-3">

    <div class="row justify-content-center">
        <div class="col">
            <div class="dataHora d-inline-block p-2 rounded">
                <!--<p>01/10/2020 13:50</p>-->
                <p>@DateTime.Now.Day/@DateTime.Now.Month/@DateTime.Now.Year @DateTime.Now.Hour:@DateTime.Now.Minute</p>
            </div>
        </div>

        <div class="col text-center">
            <div class="logoConteinerSmall d-inline-block p-2 rounded bg-light boxShadow">
                <img class="logoSmall" src="~/Img/Logo/adminiscar.jpg" alt="logo_da_empresa" />
            </div>
        </div>

        <div class="col text-right">
            <div class="butao butao-logout1 d-inline-block p-2 rounded text-center">
                <p>Voltar</p>
            </div>
        </div>
    </div>

</header>
<!--fimHeader-->
<!--navgacaoentreCadastrarAndConsultar-->
<section class="row justify-content-center p-2 bg-light">

    <div class="col-12 my-3">
        <h2 class="text-center font-weight-bold text-roxo">Locação</h2>
    </div>

    <div class="col-6 my-3 p-3 text-center rounded" style="background-color: #955cfb;">
        <button class="butaoMedian butao-version2 mx-2  rounded butaoActive" type="button">Cadastrar</button>

        <button class="butaoMedian butao-version2 bg-branco mx-2  rounded" type="button">Consultar</button>
    </div>

</section>
<!--fimNavgacaoentreCadastrarAndConsultar-->

<!--Cadastro-->
<section class="row justify-content-center my-2 p-2">
    
    <div class="col-12 text-white">
        <form>
            <!--nome/cpf/cnpj/cnh-->
            <div class="form-row">

                <div class="col mt-1 mb-2">
                    <label for="exampleInputEmail1">Numero Do Pedido:</label>
                    <input type="text" class="form-control col-10" placeholder="">
                </div>

                <div class="col mt-1 mb-2">
                    <label for="exampleInputEmail1">Nome Da Empresa:</label>
                    <input type="text" class="form-control col-10" placeholder="">
                </div>

            </div>

            <div class="form-row">

                <div class="col my-1">
                    <label for="exampleInputEmail1">CNPJ:</label>
                    <input type="text" class="form-control col-10" placeholder="">
                </div>

                <div class="col my-1">
                    <label for="exampleInputEmail1">CPF:</label>
                    <input type="text" class="form-control col-10" placeholder="">
                </div>

                <div class="col my-1">
                    <label for="exampleInputEmail1">CNH:</label>
                    <input type="text" class="form-control col-10" placeholder="">
                </div>

            </div>
            <!--fimNome/cpf/cnpj/cnh-->

            <!--placaCarroNomeveiculo-->
            <div class="form-row border-top my-4">

                <div class="col my-1">
                    <label for="exampleInputEmail1">Nome Do Veiculo:</label>
                    <input type="text" class="form-control col-10" placeholder="">
                </div>

                <div class="col my-1">
                    <label for="exampleInputEmail1">Categoria:</label>
                    <input type="text" class="form-control col-8" placeholder="">
                </div>

            </div>

            <div class="form-row my-4">

                <div class="col-6 my-1">
                    <label for="exampleInputEmail1">Placa Do Carro:</label>
                    <input type="text" class="form-control col-8" placeholder="">
                </div>

                <div class="col py-4 align-content-center">
                    <div class="form-check form-check-inline">
                        <input class="form-check-input" type="checkbox" id="inlineCheckbox1" value="option1">
                        <label class="form-check-label" for="inlineCheckbox1">Som</label>
                    </div>

                    <div class="form-check form-check-inline">
                        <input class="form-check-input" type="checkbox" id="inlineCheckbox2" value="option2">
                        <label class="form-check-label" for="inlineCheckbox2">Som com BT</label>
                    </div>

                    <div class="form-check form-check-inline">
                        <input class="form-check-input" type="checkbox" id="inlineCheckbox3" value="option3">
                        <label class="form-check-label" for="inlineCheckbox3">GPS</label>
                    </div>
                </div>

            </div>
            <!--fimPlacaCarroNomeveiculo-->

            <!--valores/qtdTempo/VlBase-->
            <div class="form-row border-top border-bottom py-2 my-2">

                <div class="col my-1">
                    <label for="exampleInputEmail1">Valor Base:</label>
                    <input type="text" class="form-control col-10" placeholder="">
                </div>

                <div class="col my-1">
                    <label for="exampleInputEmail1">Quantidade De Tempo:</label>
                    <input type="text" class="form-control col-8" placeholder="">
                </div>

                <div class="col my-1">
                    <label for="exampleInputEmail1">Valor Total:</label>
                    <input type="text" class="form-control col-10" placeholder="">
                </div>
            </div>
            <!--fimValores-->

            <div class="form-row justify-content-center my-5">
                <button class="butaoMedian bg-branco mx-2 my-2 rounded" type="button">Registrar</button>

                <button class="butaoMeidan bg-branco mx-2 my-2 rounded" type="reset">Limpar</button>
            </div>

        </form>
    </div>

</section>
<!--fimCadastro-->
