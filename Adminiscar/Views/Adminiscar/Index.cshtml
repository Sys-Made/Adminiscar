@{
    Layout = "~/Views/Shared/_HeaderAndFooter.cshtml";
}

@{ 
    ViewBag.Title = "Adminiscar";
}

<!-- telaDeLogin -->
<section class="container-fluid my-4">
    
    <div class="row">
        <div class="col-12">
            <article class="row justify-content-center bg-transpWhite rounded shadow">

                <div class="col-6 d-block p-2 text-center">

                    <h3 class="text-white text-shadow">Login Do Funcionario</h3>

                    <br />

                    <img class="rounded-circle teste iconeImgUser" src="~/Img/Icones/useAvatar02.png" alt="logo_usuario" />

                    <br />

                </div>

                <div class="col-12 d-block">

                    <form class="text-white teste rounded border-secondary my-2 p-3">
                        <div class="form-group text-shadow">
                            <label for="exampleInputEmail1">Login:</label>
                            <input type="email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Exemplo: 123.654.879-82">
                            <small id="emailHelp" class="form-text text-white">Use seu CPF pra logar!</small>
                        </div>

                        <div class="form-group text-shadow">
                            <label for="exampleInputPassword1">Senha:</label>
                            <input type="password" class="form-control" id="exampleInputPassword1">
                        </div>
                        
                        <center><a class="#" href="#">Esqueci a senha!</a></center>
                        
                        <br />

                        <center><button type="submit" class="btn butao butao-version1 text-dark">Entrar</button></center>
                    </form>

                </div>
            </article>
        </div>
    </div>

</section>
<!-- fimTelaDeLogin -->


