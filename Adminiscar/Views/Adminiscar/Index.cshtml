<!-- model do login -->
@model Adminiscar.Models.LoginACS

@{
    Layout = "~/Views/Shared/_HeaderAndFooter.cshtml";
}
@{ 
    ViewBag.Title = "Adminiscar";
}

@TempData["Message"]



<!-- telaDeLogin -->
<section class="container-fluid my-4">
    
    <div class="row">
        <div class="col-12">
            <article class="row justify-content-center bg-transpWhite rounded shadow">

                <div class="col-6 p-2 text-center">

                    <h3 class="text-white text-shadow">Login Do Funcionario</h3>

                    <br />

                    <img class="rounded-circle teste iconeImgUser" src="~/Img/Icones/useAvatar02.png" alt="logo_usuario" />

                    <br />

                </div>

                <div class="col-12">

                    @{ 
                        //aqui é formulario html.beginform(actionSua,controllSeu, formatoQVaiEnvialo)
                    }

                    @using (Html.BeginForm("Index", "Adminiscar", FormMethod.Post)){

                        <div class="row">

                            <div class="form-group text-shadow col-12">
                                <label for="exampleInputEmail1" class="text-white">Login:</label>
                                @Html.EditorFor(x => x.user, new { htmlAttributes = new { @class = "form-control col-12", type = "text", placeholder = "Exemplo: seu email teste@teste.com", id = "exampleInputEmail1", senha = "txtUsuario", required = "required" } })
                                @Html.ValidationMessageFor(x => x.user, "", new { @class = "text-danger" })
                            </div>

                            <div class="form-group text-shadow col-12">
                                <label for="exampleInputPassword1" class="text-white">Senha:</label>
                                @Html.EditorFor(x => x.pass, new { htmlAttributes = new { @class = "form-control col-12", type = "password", id = "exampleInputSenha1", senha = "txtPass", required = "required" } })
                                @Html.ValidationMessageFor(x => x.pass, "", new { @class = "text-danger" })
                            </div>

                            <button type="submit" class="btn butao butao-version1 text-dark mx-auto my-4">Entrar</button>

                        </div>
                     }

                    </div>
            </article>
        </div>
    </div>

</section>
<!-- fimTelaDeLogin -->


