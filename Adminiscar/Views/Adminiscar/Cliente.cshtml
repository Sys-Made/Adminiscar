<!--Cadastro-->
<section class="row justify-content-center my-2 p-2" style="display: none;">
    <!--nome/cpf/cnpj/cnh-->
    <div class="col-12 text-white">
        <form>
            <!--nome/cpf/cnpj/cnh-->
            <div class="form-row">

                <div class="col mt-1 mb-2">
                    <label for="exampleInputEmail1">Nome:</label>
                    <input type="text" class="form-control col-10" placeholder="Exemplo: Ana Clara De Almeida">
                </div>

                <div class="col mt-1 mb-2">
                    <label for="exampleInputEmail1">CPF:</label>
                    <input type="text" class="form-control col-10" placeholder="Exemplo: 123.654.798-50">
                </div>

            </div>

            <div class="form-row">

                <div class="col my-1">
                    <label for="exampleInputEmail1">CNPJ:</label>
                    <input type="text" class="form-control col-10" placeholder="Coloca seu exemplo aqui">
                </div>

                <div class="col my-1">
                    <label for="exampleInputEmail1">CNH:</label>
                    <input type="text" class="form-control col-10" placeholder="Coloca seu exemplo aqui">
                </div>

            </div>
            <!--fimNome/cpf/cnpj/cnh-->
            <!--Edereço-->
            <div class="form-row my-2">

                <div class="col my-1">
                    <label for="exampleInputEmail1">Endereço:</label>
                    <input type="text" class="form-control col-10" placeholder="Exemplo: Rua charles chappin">
                </div>

                <div class="col-4 my-1">
                    <label for="exampleInputEmail1">numero:</label>
                    <input type="text" class="form-control col-8" placeholder="Exemplo: 14a">
                </div>

            </div>

            <div class="form-row my-2">

                <div class="col my-1">
                    <label for="exampleInputEmail1">Bairro:</label>
                    <input type="text" class="form-control col-10" placeholder="Exemplo: Jardim Santana">
                </div>

                <div class="col my-1">
                    <label for="exampleInputEmail1">Cidade:</label>
                    <input type="text" class="form-control col-8" placeholder="Exemplo: São Paulo">
                </div>

                <div class="col my-1">
                    <label for="exampleInputEmail1">Uf:</label>
                    <br />
                    <select class="custom-select col-5" id="inlineFormCustomSelect">
                        <option selected>UF...</option>
                        <option value="1">SP</option>
                        <option value="2">RJ</option>
                        <option value="3">ES</option>
                    </select>
                </div>

            </div>
            <!--fimEdereço-->

            <!--contato-->
            <div class="form-row my-2">

                <div class="col my-1">
                    <label for="exampleInputEmail1">Celular:</label>
                    <input type="text" class="form-control col-10" placeholder="Exemplo: 11 98755-6321">
                </div>

                <div class="col my-1">
                    <label for="exampleInputEmail1">Telefone Fixo:</label>
                    <input type="text" class="form-control col-10" placeholder="Exemplo: 11 3968-5023">
                </div>

            </div>
            <!--fimContato-->

            <div class="form-row justify-content-center my-3">
                <button class="butaoMedian bg-branco mx-2 my-2 rounded" type="button">Registrar</button>

                <button class="butaoMeidan bg-branco mx-2 my-2 rounded" type="reset">Limpar</button>
            </div>

        </form>
    </div>
    
</section>
<!--fimCadastro-->

