@model Adminiscar.Models.Carro

@{
    ViewBag.Title = "EditarCliente";
    Layout = "~/Views/Shared/_HeaderAndFooter.cshtml";
}

@if (Session["usuarioLog"] != null)
{
    <!--header-->
    <header class="navInfo mb-3">

        <div class="row justify-content-center">
            <div class="col">
                <div class="dataHora d-inline-block p-2 rounded">
                    <!--<p>01/10/2020 13:50</p>-->
                    <p>@DateTime.Now.Day/@DateTime.Now.Month/@DateTime.Now.Year @DateTime.Now.Hour:@DateTime.Now.Minute</p>
                </div>
            </div>

            <div class="col text-center">
                <div class="logoConteinerSmall d-inline-block p-2 rounded bg-light boxShadow">
                    <img class="logoSmall" src="~/Img/Logo/adminiscar.jpg" alt="logo_da_empresa" />
                </div>
            </div>

            <div class="col text-right" onclick="NavFuncao(7);">
                <div class="butao butao-logout1 d-inline-block p-2 rounded text-center">
                    <p>Voltar</p>
                </div>
            </div>
        </div>

    </header>
    <!--fimHeader-->

    <section class="row justify-content-center text-center">

        <h2 class="col-12 bg-light py-3">Editar Dados Do Carro</h2>

    </section>

    <!-- Editar Dados -->
    <section class="row justify-content-center my-2 p-2 cadastroSecao">
        <!--nome/cpf/cnpj/cnh-->
        <div class="col-12 text-white">

            @using (Html.BeginForm("UpdateCarro", "Adminiscar", FormMethod.Post))
            {
                <div class="form-row">
                    <div class="col mt-1 mb-2">
                        <label for="exampleInputEmail1">Nome Veiculo:</label>
                        @Html.EditorFor(car => car.nomeCar, new { htmlAttributes = new { @class = "form-control col-10", type = "text", placeholder = "Nome: " + ViewBag.dadosCar[1], id = "inputCliNome", senha = "txtNomeCli", required = "required" } })
                    </div>

                    <div class="col mt-1 mb-2">
                        <label for="exampleInputEmail1">Placa:</label>
                        @Html.EditorFor(car => car.placaCar, new { htmlAttributes = new { @class = "form-control col-10", type = "text", placeholder = "placa: " + ViewBag.dadosCar[2], id = "inputCliCpf", senha = "txtCpfCli", required = "required" } })
                    </div>
                </div>

                <div class="form-row">
                    <div class="col mt-1 mb-2">
                        <label for="exampleInputCnpj1">Renavam:</label>
                        @Html.EditorFor(car => car.renavCar, new { htmlAttributes = new { @class = "form-control col-10", type = "text", placeholder = "Renavam: " + ViewBag.dadosCar[3], id = "inputCliCnpj", senha = "txtCnpjCli" } })
                    </div>

                    <div class="col mt-1 mb-2">
                        <label for="exampleInputCnpj1">Modelo Carro:</label>
                        @Html.EditorFor(car => car.modeloCar, new { htmlAttributes = new { @class = "form-control col-10", type = "text", placeholder = "Modelo: " + ViewBag.dadosCar[4], id = "inputCliCnh", senha = "txtCnhCli", required = "required" } })
                    </div>

                </div>

                <div class="form-row my-2">
                    <div class="col my-1">
                        <label for="exampleInputEmail1">Cartegoria:</label>
                        @Html.EditorFor(car => car.categoriaCar, new { htmlAttributes = new { @class = "form-control col-10", type = "text", placeholder = "Cartegoria: " + ViewBag.dadosCar[5], id = "inputCliRualg", senha = "txtRualgCli", required = "required" } })
                    </div>

                    <div class="col my-1">
                        <label for="exampleInputEmail1">Tipo Combustivel:</label>
                        @Html.EditorFor(car => car.combCar, new { htmlAttributes = new { @class = "form-control col-8", type = "text", placeholder = "Combustivel: " + ViewBag.dadosCar[6], id = "inputCliNum", senha = "txtNumCli", required = "required" } })
                    </div>

                </div>

                <div class="form-row my-2">
                    <div class="col my-1">
                        <label for="exampleInputEmail1">Quilometragem:</label>
                        @Html.EditorFor(car => car.KmhCar, new { htmlAttributes = new { @class = "form-control col-10", type = "text", placeholder = "Quilometragem: 0.0Khm", id = "inputCliBairro", senha = "txtBairroCli", required = "required" } })
                    </div>

                    <div class="col my-1">
                        <label for="exampleInputEmail1">Status:</label>
                        @Html.EditorFor(car => car.statusCar, new { htmlAttributes = new { @class = "form-control col-8", type = "text", placeholder = "Status: " + ViewBag.dadosCar[7], id = "inputCliCid", senha = "txtCidCli", required = "required" } })
                    </div>

                </div>

                <div class="form-row my-2">

                    <div class="col my-1">
                        <label for="exampleInputEmail1">Valor Mensal:</label>
                        @Html.EditorFor(car => car.vlmensCar, new { htmlAttributes = new { @class = "form-control col-8", type = "text", placeholder = "Valor mensal: R$" + ViewBag.dadosCar[9], id = "inputCliTell", senha = "txtTellCli", required = "required" } })
                    </div>

                    <div class="col my-1">
                        <label for="exampleInputEmail1">Valor Semanal:</label>
                        @Html.EditorFor(car => car.vlsmanlCar, new { htmlAttributes = new { @class = "form-control col-8", type = "text", placeholder = "valor Semanal: R$" + ViewBag.dadosCar[8], id = "inputCliTell2", senha = "txtTell2Cli", required = "required" } })
                    </div>

                </div>

                <div class="form-row my-2">

                    <div class="col my-1">
                        <label for="exampleInputEmail1">Som:</label>
                        @Html.EditorFor(car => car.somCar, new { htmlAttributes = new { @class = "form-control col-8", type = "text", placeholder = "som: " + ViewBag.dadosCar[10], id = "inputCliTell", senha = "txtTellCli", required = "required" } })
                    </div>

                    <div class="col my-1">
                        <label for="exampleInputEmail1">Som BT:</label>
                        @Html.EditorFor(car => car.somBwCar, new { htmlAttributes = new { @class = "form-control col-8", type = "text", placeholder = "som bt: " + ViewBag.dadosCar[11], id = "inputCliTell2", senha = "txtTell2Cli", required = "required" } })
                    </div>

                    <div class="col my-1">
                        <label for="exampleInputEmail1">Gps:</label>
                        @Html.EditorFor(car => car.gpsCar, new { htmlAttributes = new { @class = "form-control col-8", type = "text", placeholder = "Gps: Sim", id = "inputCliTell2", senha = "txtTell2Cli", required = "required" } })
                    </div>

                </div>

                <div class="form-row justify-content-center my-3">
                    <input type="hidden" name="codCar" value="@ViewBag.codCar" />
                    <button class="butaoMedian bg-branco mx-2 my-2 rounded" type="submit">Registrar</button>

                    <button class="butaoMeidan bg-branco mx-2 my-2 rounded border-0" type="reset">Limpar</button>
                </div>

            }
        </div>

    </section>
}
else
{


    <div class="row justify-content-center my-2 py-2">
        <div class="col-10 mx-auto alert alert-danger text-center py-1"><img src="~/Img/Imagens/alerta.jpg" alt="alertaDeAcessoNegado" /></div>
        <div class="col-10 mx-auto alert alert-danger text-center py-1">@Html.ActionLink("Voltar Login", "Index", "Adminiscar", new { @class = "btn btn-warning btn-lg font-weight-bold" })</div>
        <div class="col-10 mx-auto alert alert-danger text-center rounded-bottom py-1 "><p class="text-center text-danger font-weight-bold">Você precisar ta logado para acessar essa pagina, volte a tela de login!!!</p></div>
    </div>


}

