<!--Cadastro-->
<section class="row justify-content-center my-2 p-2 cadastroSecao">
    <!--nome/cpf/cnpj/cnh-->
    <div class="col-12 text-white">
        <form>
            <!--nomeVeiculo/modelo/renavam/combustivel-->
            <div class="form-row">

                <div class="col mt-1 mb-2">
                    <label for="exampleInputEmail1">Nome Do veiculo:</label>
                    <input type="text" class="form-control col-10" placeholder="">
                </div>

                <div class="col mt-1 mb-2">
                    <label for="exampleInputEmail1">Modelo:</label>
                    <input type="text" class="form-control col-10" placeholder="">
                </div>

            </div>

            <div class="form-row">

                <div class="col my-1">
                    <label for="exampleInputEmail1">Renavam:</label>
                    <input type="text" class="form-control col-10" placeholder="">
                </div>

                <div class="col my-1">
                    <label for="exampleInputEmail1">Combustivel:</label>
                    <input type="text" class="form-control col-10" placeholder="">
                </div>

            </div>
            <!--fimNomeVeiculo/modelo/renavam/combustivel-->
            
            <!--placaAndCartegoria-->
            <div class="form-row border-top my-4">

                <div class="col my-1">
                    <label for="exampleInputEmail1">Placa:</label>
                    <input type="text" class="form-control col-10" placeholder="">
                </div>

                <div class="col my-1">
                    <label for="exampleInputEmail1">Categoria:</label>
                    <input type="text" class="form-control col-8" placeholder="">
                </div>

            </div>

            <div class="form-row my-4 justify-content-center">

                <div class="row p-2 justify-content-center text-white">
                    <div class="form-check form-check-inline">
                        <input class="form-check-input" type="checkbox" id="inlineCheckbox1" value="option1">
                        <label class="form-check-label" for="inlineCheckbox1">Nome</label>
                    </div>

                    <div class="form-check form-check-inline">
                        <input class="form-check-input" type="checkbox" id="inlineCheckbox2" value="option2">
                        <label class="form-check-label" for="inlineCheckbox2">CPF</label>
                    </div>

                    <div class="form-check form-check-inline">
                        <input class="form-check-input" type="checkbox" id="inlineCheckbox3" value="option3">
                        <label class="form-check-label" for="inlineCheckbox3">CNH</label>
                    </div>

                    <div class="form-check form-check-inline">
                        <input class="form-check-input" type="checkbox" id="inlineCheckbox3" value="option3">
                        <label class="form-check-label" for="inlineCheckbox3">CNPJ</label>
                    </div>
                </div>

            </div>
            <!--fimPlacaAndCartegoria-->

            <!--valores-->
            <div class="form-row border-top border-bottom py-2 my-2">

                <div class="col my-1">
                    <label for="exampleInputEmail1">Valor Diario:</label>
                    <input type="text" class="form-control col-10" placeholder="">
                </div>

                <div class="col my-1">
                    <label for="exampleInputEmail1">Valor Semanal:</label>
                    <input type="text" class="form-control col-8" placeholder="">
                </div>

                <div class="col my-1">
                    <label for="exampleInputEmail1">Valor Mensal:</label>
                    <input type="text" class="form-control col-10" placeholder="">
                </div>
            </div>
            <!--fimValores-->

            <div class="form-row justify-content-center my-5">
                <button class="butaoMedian bg-branco mx-2 my-2 rounded" type="button">Registrar</button>

                <button class="butaoMeidan bg-branco mx-2 my-2 rounded" type="reset">Limpar</button>
            </div>

        </form>
    </div>

</section>
